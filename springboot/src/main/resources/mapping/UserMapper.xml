<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"
        "http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">
<mapper namespace="com.cykj.mapper.UserMapper">
    <select id="selectUserAccount" resultType="User">
        select * from t_user where account=#{account};
    </select>
<!--登录-->
    <select id="selectUser" resultType="User" parameterType="User">
        select * from t_user where account=#{account} and pwd=#{pwd};
    </select>
<!--注册-->
    <insert id="addUser" parameterType="User">
        insert into t_user(userId,userName,account,pwd,sex,education,profession,phone,email) values (#{userId},#{userName},#{account}, #{pwd}, #{sex}, #{education}, #{profession}, #{phone}, #{email})
    </insert>
<!--表格查询-->
    <select id="userSelectTable" resultType="FindUser" parameterType="FindUser">
            select * from t_finduser
    </select>
    <select id="userSelectCount" resultType="int">
            select count(*) from t_finduser
    </select>
</mapper>